<div class="container mx-auto p-6">
  <h1 class="text-4xl font-bold text-center text-blue-600 mb-6">Détails de l'Entrée de Poids</h1>

  <div class="max-w-lg mx-auto bg-white shadow-md rounded-lg p-6">
    <div class="mb-4">
      <h2 class="text-2xl font-semibold text-gray-700">Date :</h2>
      <p class="text-gray-600 text-lg"><%= @weight_entry.date %></p>
    </div>
    <div class="mb-4">
      <h2 class="text-2xl font-semibold text-gray-700">Poids (kg) :</h2>
      <p class="text-gray-600 text-lg"><%= @weight_entry.weight %></p>
    </div>

    <div class="flex justify-between mt-6">
      <%= link_to "Modifier", edit_weight_entry_path(@weight_entry), class: "bg-green-500 hover:bg-green-700 text-white font-bold py-2 px-4 rounded" %>
      <%= button_to "Supprimer", weight_entry_path(@weight_entry), method: :delete, data: { turbo_confirm: "Êtes-vous sûr ?" }, class: "bg-red-500 hover:bg-red-700 text-white font-bold py-2 px-4 rounded" %>
    </div>
  </div>

  <div class="mt-6 text-center">
    <%= link_to "Retour", weight_entries_path, class: "text-blue-500 hover:underline" %>
  </div>
</div>
