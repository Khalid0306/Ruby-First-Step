  <title>Nav</title>
</head>
<body>
  <!-- Navbar -->
  <nav class="bg-blue-600 p-4 text-white">
    <div class="container mx-auto flex justify-between">
      <a href="/" class="text-lg font-bold">WeightTracker.io</a>

      <% if user_signed_in? %>
        <span class="mr-4"><%= current_user.email %></span> 
        <%= button_to "Log Out", destroy_user_session_path, method: :delete,
                form: { data: { turbo_confirm: "Etes vous sÃ»r ? ?" } }, class: "text-white" %>
      <% else %>
        <a href="<%= new_user_session_path %>" class="text-white">Log In</a>
        <a href="<%= new_user_registration_path %>" class="ml-4 text-white">Sign Up</a>
      <% end %>
    </div>
  </nav>
</body>
</html>
